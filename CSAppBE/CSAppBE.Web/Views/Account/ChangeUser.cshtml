@model CSAppBE.Web.Models.ChangeUserViewModel
@{
    ViewData["Title"] = "Actualizar Mis Datos";
}

<h2>Actualizar Mis Datos</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="Name">Razón Social</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="Serial">Número de Serie</label>
                <input asp-for="Serial" class="form-control" />
                <span asp-validation-for="Serial" class="text-warning"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
                <a asp-action="ChangePassword" class="btn btn-success">Cambiar Contraseña</a>
            </div>
            <div class="form-group">
                <label asp-for="Certificate">¿En dónde se encuentra?</label>
                <input type="file" name="file" />
            </div>
            <div class="text-success">@ViewBag.UserMessage</div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
