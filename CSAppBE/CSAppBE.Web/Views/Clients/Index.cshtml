@model IEnumerable<CSAppBE.Web.Data.Entities.Client>

@{
    ViewData["Title"] = "Clientes";
}
<div class="text-center">
    <img class="afip-logo img-fluid" src="~/images/afip-logo.png" />
    <hr class="default-hr"/>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary" ><i class="fas fa-plus-square"></i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CUIT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CUIT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    <a asp-action="ConsultarComunicaciones" asp-controller="Communications" asp-route-cuit="@item.CUIT" class="btn btn-dark"><i class="fas fa-chevron-circle-right"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-dark"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
